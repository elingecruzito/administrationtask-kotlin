<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AdministrationTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue_background</item>
    </style>

    <style name="ThemeTitles">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_titles</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ThemeSubTitles">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size_subtitles</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeTitleCard">
        <item name="android:textColor">@color/blue_background</item>
        <item name="android:textSize">@dimen/size_titles_card</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ThemeTextInformation">
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="ThemeLabelFields">
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">@dimen/padding_view</item>
    </style>

    <style name="ThemeFormButtons">
        <item name="android:background">@drawable/border_form_buttoms</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeFormButtonsCancel">
        <item name="android:background">@color/color_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeLabelsLongText">
        <item name="android:lines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>